<div class="container my-5">
  <div class="card shadow-lg border-0">
    <div class="row g-0">

      <% if @product.image.attached? %>
        <div class="col-md-6">
          <%= image_tag url_for(@product.image), class: "img-fluid rounded-start", alt: @product.title %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>

      <div class="col-md-6 d-flex flex-column justify-content-center p-4">
        <h1 class="card-title display-5 fw-bold"><%= @product.title %></h1>
        <p class="fs-4 text-success mb-3">Price: $<%= '%.2f' % (@product.price_cents / 100.0) %></p>
        <p class="card-text"><%= @product.description %></p>

        <a href="#" class="btn btn-primary mt-4 w-50">Add to Cart</a>

        <%# Wilson cart implementation %>

      </div>

    </div>
  </div>
</div>
