<div class="col">
  <div class="card border border-primary rounded-4 shadow-sm h-100" style="background-color: #e0f0ff;">
    <% if product.image.attached? %>
      <%= image_tag url_for(product.image), class: "card-img-top rounded-top", alt: product.title %>
    <% end %>

    <div class="card-body">
      <h5 class="card-title">
        <%= link_to product.title, product_path(product), class: "stretched-link text-decoration-none text-dark" %>
      </h5>
      <p class="card-text"><%= truncate(product.description, length: 100) %></p>
    </div>

    <div class="card-footer d-flex justify-content-between align-items-center border-top">
      <span class="fw-bold text-primary">$<%= '%.2f' % (product.price_cents / 100.0) %></span>
      <%= link_to "View", product_path(product), class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
